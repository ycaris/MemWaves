<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Achievement_board"
    android:gravity="center|top"
    android:orientation="vertical"
    android:background="@drawable/background2">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Achievement Board"
        android:textColor="#93BEFF"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        tools:ignore="MissingConstraints" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/a1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/achievement1"
            tools:ignore="DuplicateIds,MissingConstraints" />

        <ImageView
            android:id="@+id/a2"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="150dp"
            app:srcCompat="@drawable/achievement2"
            tools:ignore="DuplicateIds,MissingConstraints" />

        <ImageView
            android:id="@+id/a3"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/achievement3"
            android:layout_marginRight="80dp"
            tools:ignore="ContentDescription,MissingConstraints" />

        <ImageView
            android:id="@+id/a4"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="70dp"
            app:srcCompat="@drawable/achievement4"
            tools:ignore="DuplicateIds,MissingConstraints"
            tools:layout_editor_absoluteX="168dp"
            tools:layout_editor_absoluteY="483dp" />


    </LinearLayout>
    <ImageView
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="150dp"
        android:padding="5dp"
        android:src="@drawable/back_btn" />
    

</androidx.appcompat.widget.LinearLayoutCompat>